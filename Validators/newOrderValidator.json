{
  "type": "object",
  "required": ["name", "firstLineOfAddress", "postcode", "email"],
  "allOf": [{
    "properties": {
      "name": {"type": "string",
        "pattern": "^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$"},
      "firstLineOfAddress": {"type": "string"},
      "postcode": {"type": "string"},
      "email": {"type": "string", "format": "email"
      }
    },
    "additionalProperties": false
  }]
}

